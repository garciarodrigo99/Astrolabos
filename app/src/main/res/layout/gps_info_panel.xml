<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#80000000"
              android:padding="20dp">

    <!-- Contenedor principal con dos columnas -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <!-- Columna izquierda -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <!-- Latitude -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_label_lat"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_label_lat"/>
                <TextView
                        android:id="@+id/tv_lat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_default_value"/>
            </LinearLayout>

            <!-- Speed -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_label_speed"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_label_speed"/>
                <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_default_value"/>
            </LinearLayout>

            <!-- Accuracy -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_label_accuracy"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_label_accuracy"/>
                <TextView
                        android:id="@+id/tv_accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_default_value"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Separador vertical -->
        <View
                android:id="@+id/gps_info_panel_glh_50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

        <!-- Columna derecha -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <!-- Longitude -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_label_lon"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_label_lon"/>
                <TextView
                        android:id="@+id/tv_lon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_default_value"/>
            </LinearLayout>

            <!-- Altitude -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_label_altitude"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_label_altitude"/>
                <TextView
                        android:id="@+id/tv_altitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_default_value"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
