<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="-273dp"
        tools:layout_editor_absoluteX="-133dp"
>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/sw_gps"
            android:textOn="@string/sw_gps_textOn"
            android:textOff="@string/sw_gps_textOff"
            android:layout_marginStart="10dp"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="true"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/tv_label_sensor"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/tv_label_sensor"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sw_gps"/>

    <TextView
            android:id="@+id/tv_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_tracking_location"
            app:layout_constraintStart_toEndOf="@+id/tv_label_sensor"
            app:layout_constraintTop_toTopOf="@+id/tv_label_sensor"/>

    <View
            android:id="@+id/hdv_1"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_sensor"
            android:layout_marginTop="6dp"
            tools:ignore="MissingConstraints"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/hdv_1"
            android:layout_height="0dp">
    </FrameLayout>

    <include
            android:id="@+id/ll_gps_info_panel"
            layout="@layout/gps_info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ib_toggle_gps_info_panel"
            android:layout_alignParentBottom="true"
    />

    <ImageButton
            android:id="@+id/ib_toggle_gps_info_panel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:contentDescription="@string/ib_toggle_gps_info_panel_description"
            android:drawableTop="@drawable/round_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/data_exploration"
            app:tint="@color/round_button_gray"
    />

    <!-- TODO: refactor to image button -->
    <Button
            android:id="@+id/btn_start_tracking"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/round_button"
            android:text="@string/ib_start_tracking_description"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:id="@+id/ib_location_update_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:contentDescription="@string/ib_location_update_settings_description"
            android:drawableTop="@drawable/round_button"
            app:layout_constraintStart_toStartOf="@+id/btn_start_tracking"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_start_tracking"
            android:layout_marginVertical="25dp"
            android:src="@drawable/location_off"
            app:tint="@color/round_button_gray"
    />

</androidx.constraintlayout.widget.ConstraintLayout>