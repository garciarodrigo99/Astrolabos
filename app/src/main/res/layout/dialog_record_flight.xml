<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
            android:id="@+id/tv_dialog_record_flight_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_dialog_record_flight_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/tv_dialog_record_flight_flight_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_dialog_record_flight_flight_name"/>

    <EditText
            android:id="@+id/et_dialog_record_flight_flight_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_dialog_record_flight_flight_name"
            android:inputType="text"/>

    <TextView
            android:id="@+id/tv_dialog_record_flight_update_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_dialog_record_flight_update_settings"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_dialog_record_flight_slow_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_dialog_record_flight_slow_mode"/>

        <EditText
                android:id="@+id/et_dialog_record_flight_slow_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/et_dialog_record_flight_slow_mode"
                android:inputType="number"/>

        <TextView
                android:id="@+id/tv_dialog_record_flight_fast_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_dialog_record_flight_fast_mode"/>

        <EditText
                android:id="@+id/et_dialog_record_flight_fast_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/et_dialog_record_flight_fast_mode"
                android:inputType="number"/>
    </LinearLayout>

</LinearLayout>
