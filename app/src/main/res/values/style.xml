<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LocationInfoPanelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/location_info_panel_icons_height</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LocationInfoPanelIcon">
        <item name="android:layout_width">@dimen/location_info_panel_icons_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="LocationInfoPanelFieldLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">5dp</item>
    </style>
</resources>